{% comment %}
  Product Customizer App Block
  This block adds infinite product options to any product page
{% endcomment %}

{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "stylesheet": "product-customizer.css",
  "javascript": "product-customizer.js",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Product Customizer",
      "default": true
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#e64a5d"
    },
    {
      "type": "checkbox",
      "id": "show_prices",
      "label": "Show Prices in Options",
      "default": true
    }
  ]
}
{% endschema %}

{% if block.settings.enabled %}
<div 
  id="infinite-options-customizer" 
  class="infinite-options-wrapper"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product.price }}"
  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-primary-color="{{ block.settings.primary_color }}"
  data-show-prices="{{ block.settings.show_prices }}"
  data-currency="{{ shop.currency }}"
>
  <div class="infinite-options-loading">
    <div class="spinner"></div>
    <p>Loading customization options...</p>
  </div>
</div>

<script>
  // Initialize the customizer when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    const customizerElement = document.getElementById('infinite-options-customizer');
    if (customizerElement && window.InfiniteOptionsApp) {
      // Add class to body to help with CSS targeting
      document.body.classList.add('infinite-options-active');
      window.InfiniteOptionsApp.init(customizerElement);
    }
  });
</script>
{% endif %}
