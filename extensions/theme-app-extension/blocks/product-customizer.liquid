{% comment %}
  Product Customizer App Block
  This block adds infinite product options to any product page
{% endcomment %}

{%- comment -%} Load cart customizer on cart pages {%- endcomment -%}
{% if template == 'cart' or request.page_type == 'cart' %}
  {% render 'hide-service-product' %}
  <link rel="stylesheet" href="{{ 'cart-customizer.css' | asset_url }}">
  <script src="{{ 'cart-customizer.js' | asset_url }}" defer></script>
  <script src="{{ 'cart-price-display.js' | asset_url }}" defer></script>
  <script src="{{ 'cart-addon-display.js' | asset_url }}" defer></script>
{% endif %}

{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "stylesheet": "product-customizer.css",
  "javascript": "product-customizer.js",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Product Customizer",
      "default": true
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#e64a5d"
    },
    {
      "type": "checkbox",
      "id": "show_prices",
      "label": "Show Prices in Options",
      "default": true
    }
  ]
}
{% endschema %}

{% if block.settings.enabled %}
<div 
  id="infinite-options-customizer" 
  class="infinite-options-wrapper"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product.selected_or_first_available_variant.price }}"
  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-primary-color="{{ block.settings.primary_color }}"
  data-show-prices="{{ block.settings.show_prices }}"
  data-currency="{{ cart.currency.symbol }}"
>
  <div class="infinite-options-loading">
    <div class="spinner"></div>
    <p>Loading customization options...</p>
  </div>
</div>

<script>
  // Initialize the customizer when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    const customizerElement = document.getElementById('infinite-options-customizer');
    if (customizerElement && window.InfiniteOptionsApp) {
      // Add class to body to help with CSS targeting
      document.body.classList.add('infinite-options-active');
      window.InfiniteOptionsApp.init(customizerElement);
      
      // Listen for variant changes to update price
      document.addEventListener('variant:change', function(event) {
        if (event.detail && event.detail.variant) {
          console.log('ðŸ”„ Variant changed:', event.detail.variant);
          customizerElement.dataset.variantId = event.detail.variant.id;
          customizerElement.dataset.productPrice = event.detail.variant.price;
          
          // Reinitialize with new price
          window.InfiniteOptionsApp.init(customizerElement);
        }
      });
    }
  });
</script>
{% endif %}
